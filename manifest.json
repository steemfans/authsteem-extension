{
  "name": "__MSG_authsteem__",
  "description": "__MSG_description__",
  "default_locale": "en",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation",
    "tabs",
    "notifications",
    "idle",
    "contextMenus"
  ],
  "action": {
    "default_icon": {
      "16": "images/logo.png",
      "24": "images/logo.png",
      "32": "images/logo.png"
    },
    "default_title": "AuthSteem",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "background": {
    "service_worker": "js/background.js"
  }
}
